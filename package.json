	"scripts": {
		"vscode:prepublish": "npm run scss & npm run webview & webpack --mode production --color",
		"postinstall": "node scripts/copyWebviewResourcesFromNodeModules.js",
		"watch": "concurrently \"npm run watchExtension\" \"npm run watchWebview\" \"npm run watchScss\"",
		"watchExtension": "webpack --mode development --watch --stats minimal",
		"scss": "node-sass media/scss/webview.scss -o media --output-style compressed",
		"watchScss": "npm run scss & node-sass --watch media/scss/webview.scss -o media",
		"copyAndCompressVendorCss": "node-sass node_modules/vscode-codicons/dist/codicon.css -o media/vendor --output-style compressed",
		"webview": "webpack --mode production --config media/webpack.config.js",
		"watchWebview": "webpack --watch --stats minimal --mode development --config media/webpack.config.js",
		"watchTest": "tsc -watch -p ./",
		"test": "node ./dist/test/runTest.js",
		"generateDecorationSchema": "tsc scripts\\generateDecorationSchema.ts && node scripts\\generateDecorationSchema.js"
	},
